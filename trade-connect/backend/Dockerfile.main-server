# Stage 1 - Build the base
FROM node:22.12 AS base
WORKDIR /main-server
COPY ./trade-connect/backend/main-server .
RUN yarn install
WORKDIR /grpc
COPY ./trade-connect/backend/grpc .
RUN yarn install
RUN yarn proto-loader-gen-types --grpcLib=@grpc/grpc-js --outDir=src/proto/ src/proto/*.proto

# Stage 2 - Build the app
FROM base AS build
WORKDIR /grpc
RUN yarn build
WORKDIR /main-server
RUN yarn build

# Stage 3 - Production
FROM build
WORKDIR /main-server
EXPOSE 3000
EXPOSE 8080

CMD ["node", "dist/index.js"]